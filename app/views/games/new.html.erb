<h1>New Game</h1>
<div class="containerletters">
  <% @letters.each_with_index do |letter, index| %>
    <span id="letter-<%= index %>"><%= letter %></span>
    <% end %>
</div>
<p id="message">What is the longest word you can find?</p>
<div class="formbox">
  <form action="/score" method="post" data-turbo="false">
    <input type="text" name="answer" id="textbox">
    <input type="submit" value="Play" id="submitbutton">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
   </form>
</div>
